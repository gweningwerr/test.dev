<div id="top"><!--
    <div id="logo" class="col-xs-12 col-sm-2 col-md-2 col-lg-2">
        <a href="{{ path('home') }}">ТЕСТОВОЕ ПРИЛОЖЕНИЕ</a>
    </div>-->
    <div id="menu" class="col-xs-12 col-sm-10 col-md-10 col-lg-10">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button"
                            class="navbar-toggle collapsed"
                            data-toggle="collapse"
                            data-target="#bs-example-navbar-collapse-1"
                            aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>

                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li><a href="{{ path('home') }}">Главная</a></li>
                        <li><a href="{{ path('tasks') }}">Задачи</a></li>
                    </ul>
                    {% if app.user %}
                        <div class="navbar-form navbar-left">
                            <a class="btn btn-default" href="{{ path('task_edit') }}" role="button">Новая задача</a>
                        </div>
                    {% endif %}
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
        <div class="hexagon-box">
            {#<div id="hexagon-2">
                <div></div>
            </div>#}
            <div class="hexagon"
                 {% if app.user and not (app.user.fileName is empty) %}style="background-image: url({{ userPhoto(app.user.fileName) }})"{% endif %}>
                <a href="#"></a>
                <div class="corner-1"></div>
                <div class="corner-2"></div>

                <div class="inner">
                    {% if app.user %}
                        <a href="{{ path('fos_user_profile_show') }}">{{ app.user.username }}</a> |
                        <a href="{{ path('app.logout') }}">выйти</a>
                    {% else %}
                        <a href="{{ path('login') }}">войти</a> |
                        <a href="{{ path('registration') }}">регистрация</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endspaceless%}