{% spaceless %}
<!DOCTYPE html>
<html lang="{{ app.request.get('_locale') }}">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        <title>
            {% block title %}ТЕСТОВОЕ ПРИЛОЖЕНИЕ{% endblock %}
        </title>

        {% block meta %}{% endblock %}

        {% block og %}
            <meta property="og:url" content="{{ path('home') }}" />
            <meta property="og:type" content="website" />
            <meta property="og:title" content="ТЕСТОВОЕ ПРИЛОЖЕНИЕ" />
            <meta property="og:description" content="Пример кода для оценки кандидата" />
            <meta property="og:image" content="{{ asset('favicon.ico') }}" />
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    </head>

    <body>
        <div class="container">
            {{ render_esi( controller( 'AppBundle:Common:top' ) ) }}

            <div id="react-container" class="row-fluid clearfix">
                    {% block body %}{% endblock %}
            </div>

            {{ render_esi( controller( 'AppBundle:Common:footer' ) ) }}
        </div>

        {% block stylesheets %}
            <link href="{{ asset('css/app.css') }}" rel="stylesheet">
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('js/lib.js') }}"></script>
            <script src="{{ asset('js/main.js') }}"></script>

            <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
            <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
            <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
            <![endif]-->
        {% endblock %}
    </body>
</html>
{% endspaceless%}